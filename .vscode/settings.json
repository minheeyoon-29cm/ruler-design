{
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "javascript": "javascript",
    "typescript": "typescript",
    "typescriptreact": "typescriptreact",
    "css": "css"
  },
  "editor.quickSuggestions": {
    "strings": true,
    "comments": false,
    "other": true
  },
  "css.completion.completePropertyWithSemicolon": true,
  "css.completion.triggerPropertyValueCompletion": true,
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,
  "files.associations": {
    "*.css": "css"
  },
  "css-var-complete.files": [
    "${workspaceFolder}/src/tokens/tokens.css",
    "${workspaceFolder}/src/styles/**/*.css"
  ],
  "css-var-complete.lookupFiles": [
    "**/*.css",
    "**/*.scss",
    "**/*.sass",
    "**/*.less"
  ],
  "css-var-complete.includePattern": "var\\(\\s*--[\\w-]*",
  "css-var-complete.extensions": ["css", "scss", "sass", "less"],
  "[css]": {
    "editor.defaultFormatter": "mrmlnc.vscode-postcss-sorting"
  },
